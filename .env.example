# Captain Bitbeard Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Server hostname/IP for external access
# Use your server's IP (e.g., 192.168.1.100) or hostname
# Leave as localhost for local-only access
SERVER_HOST=localhost

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=captainbitbeard
POSTGRES_USER=bitbeard
# Generate secure password: openssl rand -base64 32
POSTGRES_PASSWORD=change_me_to_secure_password

# Database URL for backend
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# Object Storage (MinIO)
# ============================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=captainbitbeard
# Generate secure key: openssl rand -base64 32
MINIO_SECRET_KEY=change_me_to_secure_secret_key_min_32_chars
MINIO_BUCKET=captain-bitbeard
MINIO_USE_SSL=false

# ============================================
# Authentication & Security
# ============================================
# Generate secure JWT secret: openssl rand -base64 64
JWT_SECRET=change_me_to_random_secure_jwt_secret_min_64_chars
JWT_EXPIRES_IN=7d
# Generate session secret: openssl rand -hex 32
SESSION_SECRET=change_me_to_random_secure_session_secret
PASSWORD_MIN_LENGTH=12
BCRYPT_ROUNDS=10

# ============================================
# ScreenScraper API (for game metadata)
# ============================================
# Sign up at https://www.screenscraper.fr
SCREENSCRAPER_USER=your_username
SCREENSCRAPER_PASSWORD=your_password
SCREENSCRAPER_DEV_ID=your_dev_id
SCREENSCRAPER_DEV_PASSWORD=your_dev_password
SCREENSCRAPER_SOFT_NAME=CaptainBitbeard

# ============================================
# PixelLab.AI (for pixel art generation)
# ============================================
PIXELLAB_API_KEY=your_pixellab_api_key

# ============================================
# Monitoring (Phase 2)
# ============================================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
# Generate secure password: openssl rand -base64 24
GRAFANA_ADMIN_PASSWORD=change_me_to_secure_password

# ============================================
# MFA (Phase 2)
# ============================================
MFA_ENABLED=false
MFA_ISSUER=CaptainBitbeard

# ============================================
# Reverse Proxy (Production)
# ============================================
# For Cloudflare Tunnel or Nginx
DOMAIN=games.example.com
SSL_ENABLED=false

# ============================================
# Development Settings
# ============================================
LOG_LEVEL=debug
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000
